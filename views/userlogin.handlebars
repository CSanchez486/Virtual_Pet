<center>
    <h1> User Login Form </h1>
</center>
<form class="modal-content login-form">
    <div class="container">
        <h2>Login</h2>
        <hr>
        <label for="email"><b>Username</b></label>
        <input type="text" id="username-login" placeholder="Enter Username">
        <br>
        <label for="psw"><b>Password</b></label>
        <input type="password" id="password-login" placeholder="Enter Password">
        <br>

        <div class="clearfix">
            <button type="submit" id="userlogin">Login</button>
        </div>
    </div>
</form>


<!-- The Modal (contains the Sign Up form) -->
<form class="modal-content signup-form">
    <div class="container">
        <h2>Sign Up</h2>
        <p>Please fill in this form to create an account.</p>
        <hr>
        <label for="email"><b>Email</b></label>
        <input type="text" id="useremail" placeholder="Enter Email">
        <br>
        <label for="username"><b>Username</b></label>
        <input type="text" id="username" placeholder="Enter Username">
        <br>
        <label for="psw"><b>Password</b></label>
        <input type="password" id="password" placeholder="Enter Password">
        <br>

        <p>By creating an account you agree to our <a href="#" style="color:dodgerblue">Terms & Privacy</a>.</p>

        <div class="clearfix">

            <button type="submit" id="vetsignup">Sign Up</button>
        </div>
    </div>
</form>
<script src="./js/userlogin.js"></script>