<link rel="stylesheet" href="./css/style.css" text="type/css">
<div class="row">

 <a class="waves-effect waves-light btn-large blue darken-3 col s12 m6 l4 offset-l4 askbutton" href="/post"><i class="material-icons right blue darken-3">cloud</i>Ask Question</a>

</div>

</div>
<script src="./js/reply.js"></script>

  <div class="row">

    <div class="col s12 m6 l4 offset-l4">
        {{#each forums}}
        <div class="card">
            <div class="card-content">
                <form class="forumholder ">
                    <ul class="{{this.id}}">
                        <p><b>Question</b> : {{this.post}}</p>
                        <br>
                        {{#if this.response}}
                        <p><b>Response</b> : {{this.response}}</p>
                        {{/if}}
                    </ul>
                </form>

            </div>
        </div>
        {{/each}}
    </div>
</div>