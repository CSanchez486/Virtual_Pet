<link rel="stylesheet" href="./css/style.css" text="type/css">
<div class="row">
    <button class="askquestion col s12 m6 l4 offset-l4">
        <a href="/post">
            Ask Question
        </a>
    </button>
</div>

</div>
<script src="./js/reply.js"></script>

<div class="row box">
    <div class="col s12 m6 l4 offset-l4">
        {{#each forums}}
        <div class="card">
            <div class="card-content">
                <form class="forumholder ">
                    <ul class="{{this.id}}">
                        <p><b>Question</b> : {{this.post}}</p>
                        <br>
                        {{#if this.response}}
                        <p><b>Response</b> : {{this.response}}</p>
                        {{/if}}
                    </ul>
                </form>

            </div>
        </div>
        {{/each}}
    </div>
</div>